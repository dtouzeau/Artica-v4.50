CREATE TABLE IF NOT EXISTS `messages` (
  `ID` bigint(10) NOT NULL auto_increment,
  `MessageID` VARCHAR( 255 ) NOT NULL,
  `mail_from` varchar(255) NOT NULL,
  `mailfrom_domain` VARCHAR( 255 ) NOT NULL,
  `mail_to` varchar(255) NOT NULL,
  `ou` varchar(75) NOT NULL,
  `subject` varchar(255) NOT NULL,
  `filter_action` varchar(10) NOT NULL,
  `received_date` DATETIME NOT NULL,
  `zDate` datetime NOT NULL,
  `SpamRate` int(2) NOT NULL,
  `SpamInfos` VARCHAR( 255 ) NOT NULL,
  `MailSize` INT( 10 ) NOT NULL,
  `message_path` varchar(255) NOT NULL,
  `backupType` int(11) NOT NULL,
  `quarantine` INT( 1 ) NOT NULL DEFAULT '0',
  `Deleted` int(1) NOT NULL,
  PRIMARY KEY  (`ID`),
  KEY `mail_from` (`mail_from`),
  KEY `mail_to` (`mail_to`),
  KEY `ou` (`ou`),
  KEY `filter_action` (`filter_action`),
  KEY `received_date` (`received_date`),
  KEY `zDate` (`zDate`),
  KEY `SpamRate`(`SpamRate`),
  KEY `SpamInfos`(`SpamInfos`),
  KEY `backupType`(`backupType`),
  KEY `MessageID`(`MessageID`),
  KEY `Deleted` (`Deleted`),
  KEY `quarantine` (`quarantine`),
  KEY `mailfrom_domain` (`mailfrom_domain`)
)
  ENGINE=MyISAM;
